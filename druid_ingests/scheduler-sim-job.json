{
    "type": "kafka",
    "spec": {
        "ioConfig": {
            "type": "kafka",
            "topic": "svc-event-exadigit-schedulersimjob",
            "consumerProperties": {
                "bootstrap.servers": "apps.marble.ccs.ornl.gov:31700",
                "security.protocol": "SASL_PLAINTEXT",
                "sasl.mechanism": "PLAIN",
                "druid.dynamic.config.provider": {
                    "type": "environment",
                    "variables": {
                        "sasl.jaas.config": "KAFKA_SASL_JAAS_CONFIG"
                    }
                }
            },
            "inputFormat": {
                "type": "json"
            },
            "useEarliestOffset": true
        },
        "tuningConfig": {
            "type": "kafka"
        },
        "dataSchema": {
            "dataSource": "sens-svc-event-exadigit-scheduler-sim-job",
            "timestampSpec": {
                "column": "time_snapshot",
                "format": "iso"
            },
            "transformSpec": {
                "transforms": [
                    {
                        "type": "expression",
                        "name": "time_submission",
                        "expression": "timestamp_parse(time_submission)"
                    },
                    {
                        "type": "expression",
                        "name": "time_start",
                        "expression": "timestamp_parse(time_start)"
                    },
                    {
                        "type": "expression",
                        "name": "time_end",
                        "expression": "timestamp_parse(time_end)"
                    },
                    {
                        "type": "expression",
                        "name": "xnames",
                        "expression": "array_to_string(xnames, ',')"
                    }
                ]
            },
            "dimensionsSpec": {
                "dimensions": [
                    "sim_id",
                    {
                        "type": "string",
                        "name": "job_id"
                    },
                    "name",
                    {
                        "type": "long",
                        "name": "node_count"
                    },
                    {
                        "type": "long",
                        "name": "time_submission"
                    },
                    {
                        "name": "time_limit",
                        "type": "long"
                    },
                    {
                        "type": "long",
                        "name": "time_start"
                    },
                    {
                        "type": "long",
                        "name": "time_end"
                    },
                    "state_current",
                    "node_ranges",
                    "xnames"
                ]
            },
            "granularitySpec": {
                "queryGranularity": "none",
                "rollup": false,
                "segmentGranularity": "week"
            }
        }
    }
}